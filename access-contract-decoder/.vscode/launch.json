{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Generate Constants",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/generate-constants.ts",
      "cwd": "${workspaceFolder}",
      "runtimeArgs": ["-r", "ts-node/register"],
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Generate Types",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/generate-types.ts",
      "cwd": "${workspaceFolder}",
      "runtimeArgs": ["-r", "ts-node/register"],
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Generate Decoders",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/generate-decoders.ts",
      "cwd": "${workspaceFolder}",
      "runtimeArgs": ["-r", "ts-node/register"],
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Update from Blockchain",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/update-from-blockchain.ts",
      "cwd": "${workspaceFolder}",
      "runtimeArgs": ["-r", "ts-node/register"],
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
